                "name": "ciena-blueplanet",
                "url": "github.com/ciena-blueplanet"
            },
            "license": "MIT"
        }
    },
    "engines": {
        "node": ">=8"
    },
    "scripts": {
        "lint": "standard",
        "lint:fix": "standard --fix",
        "test": "ava",
        "coverage:html": "nyc ava && nyc report --reporter=html",
        "coveralls": "nyc ava && nyc report --reporter=text-lcov | coveralls",
        "prepublishOnly": "npm run lint && npm run test"
    },
    "main": "./src/index.js",
    "files": [
        "/src/*.js"
    ],
    "keywords": [
        "npm",
        "package",
        "package.json"
    ],
    "devDependencies": {
        "ava": "^2.0.0",
        "coveralls": "^3.0.4",
        "husky": "^2.4.0",
        "lint-staged": "^8.2.0",
        "nyc": "^14.1.1",
        "rimraf": "^2.6.3",
        "standard": "^12.0.1",
        "tmp": "^0.1.0"
    },
    "dependencies": {
        "dot-prop": "^4.2.0",
        "read-pkg": "^4.0.1",
        "semver": "^5.6.0",
        "write-pkg": "^3.2.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.js": [
            "standard --fix",
            "git add"
        ]
    }
}
