{
    "name": "update-pkg-extended",
    "version": "2.2.3",
    "versionName": "Babaco",
    "description": "Update package.json with ease",
    "license": "MIT",
    "repository": "panz3r/update-pkg-extended",
    "bugs": {
        "url": "https://github.com/panz3r/update-pkg-extended/issues"
    },
    "author": {
        "name": "panz3r",
        "email": "mattia.panzeri93@gmail.com",
        "url": "https://github.com/panz3r"
    },
    "credits": {
        "originalCodebase": {
            "name": "update-pkg",
            "author": {
                "name": "EGOIST",
                "email": "0x142857@gmail.com",
                "url": "github.com/egoist"
            },
            "license": "MIT"
        },
        "versionFeatureInspiredBy": {
            "name": "versiony",
            "author": {
                "name": "ciena-blueplanet",
                "url": "github.com/ciena-blueplanet"
            },
            "license": "MIT"
        }
    },
    "engines": {
        "node": ">=8"
    },
    "scripts": {
        "lint": "standard",
        "lint:fix": "standard --fix",
        "test": "ava",
        "coverage:html": "nyc ava && nyc report --reporter=html",
        "coveralls": "nyc ava && nyc report --reporter=text-lcov | coveralls",
        "prepublishOnly": "npm run lint && npm run test",
        "release:major": "changelog -M && git add CHANGELOG.md && git commit -m 'chore(changelog): Update CHANGELOG.md' && npm version major --no-git-tag-version && git add package.json package-lock.json && git commit -m 'chore(package): Bump version'",
        "release:minor": "changelog -m && git add CHANGELOG.md && git commit -m 'chore(changelog): Update CHANGELOG.md' && npm version minor --no-git-tag-version && git add package.json package-lock.json && git commit -m 'chore(package): Bump version'",
        "release:patch": "changelog -p && git add CHANGELOG.md && git commit -m 'chore(changelog): Update CHANGELOG.md' && npm version patch --no-git-tag-version && git add package.json package-lock.json && git commit -m 'chore(package): Bump version'"
    },
    "main": "./src/index.js",
    "files": [
        "/src/*.js"
    ],
    "keywords": [
        "npm",
        "package",
        "package.json"
    ],
    "devDependencies": {
        "ava": "^3.5.0",
        "coveralls": "^3.0.9",
        "generate-changelog": "^1.8.0",
        "husky": "^4.2.3",
        "lint-staged": "^10.0.8",
        "nyc": "^15.0.0",
        "rimraf": "^3.0.2",
        "standard": "^14.3.2",
        "tmp": "^0.1.0"
    },
    "dependencies": {
        "dot-prop": "^5.2.0",
        "read-pkg": "^5.2.0",
        "semver": "^7.1.3",
        "write-pkg": "^4.0.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.js": [
            "standard --fix",
            "git add"
        ]
    }
}
